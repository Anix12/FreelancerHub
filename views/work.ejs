<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Work</title>
  <script src="https://cdn.tailwindcss.com"></script>
 
</head>
<body class="bg-black text-white">
  <div class="min-h-screen flex justify-center items-center ">
    <form action="/work" method="POST"  enctype="multipart/form-data" class="bg-gray-900 p-8 rounded-lg shadow-lg w-full max-w-4xl">
      <h1 class="text-2xl font-bold text-green-500 mb-6 text-center">Create Work</h1>

      <!-- Title -->
      <div class="mb-4">
        <label for="title" class="block text-sm font-medium text-white mb-2">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          required
          class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
        />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label for="description" class="block text-sm font-medium text-white mb-2">Description</label>
        <textarea
          id="description"
          name="description"
          required
          rows="4"
          class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
        ></textarea>
      </div>

      <!-- Profile Image URL -->
      <div>
        <label for="image" class="block text-white mb-2">Profile Image</label>
        <input type="file" id="image" name="image" accept="image/*"
            class="w-full text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-green-500 file:text-white hover:file:bg-green-600">
    </div>

      <!-- Budget -->
      <div class="grid grid-cols-3 gap-4 mb-4">
        <div>
          <label for="currency" class="block text-sm font-medium text-white mb-2">Currency</label>
          <input
            type="text"
            id="currency"
            name="budget[currency]"
            required
            value="USD"
            class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
          />
        </div>
        <div>
          <label for="min_budget" class="block text-sm font-medium text-white mb-2">Min Budget</label>
          <input
            type="number"
            id="min_budget"
            name="budget[min]"
            required
            class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
          />
        </div>
        <div>
          <label for="max_budget" class="block text-sm font-medium text-white mb-2">Max Budget</label>
          <input
            type="number"
            id="max_budget"
            name="budget[max]"
            required
            class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
          />
        </div>
      </div>

      <!-- Deadline -->
      <div class="mb-4">
        <label for="deadline" class="block text-sm font-medium text-white mb-2">Deadline</label>
        <input
          type="date"
          id="deadline"
          name="deadline"
          required
          class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
        />
      </div>

      <!-- Skills -->
      <div class="mb-4">
        <label for="skills" class="block text-sm font-medium text-white mb-2">Skills (comma-separated)</label>
        <input
          type="text"
          id="skills"
          name="skills"
          required
          placeholder="e.g., JavaScript, Node.js, MongoDB"
          class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
        />
      </div>

      <!-- Posted By -->
      <div class="mb-4">
        <label for="postedby" class="block text-sm font-medium text-white mb-2">Posted By</label>
        <input
          type="text"
          id="postedby"
          name="postedby"
          placeholder="Anonymous"
          class="w-full px-4 py-2 bg-black text-white border border-green-500 rounded-lg focus:ring-2 focus:ring-green-500"
        />
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button
          type="submit"
          class="bg-green-500 text-black font-bold px-6 py-2 rounded-lg hover:bg-green-400 focus:outline-none focus:ring-2 focus:ring-green-500"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</body>
</html>
