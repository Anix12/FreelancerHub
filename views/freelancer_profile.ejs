<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freelancer Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black min-h-screen flex items-center justify-center">
    <div class="w-full bg-green-500 max-w-3xl max-h-2xl rounded-3xl pl-16 pr-16 pb-14 pt-4">
        <h1 class="text-white text-2xl font-bold text-center mb-6">Freelancer Profile</h1>
        
        <div class="bg-slate-900 rounded-lg p-8 text-white shadow-xl">
            <!-- Profile Image Section -->
            <div class="flex justify-center mb-8">
                <% if (sampleData && sampleData.image && sampleData.image.url) { %>
                    <img src="<%= sampleData.image.url %>" alt="<%= sampleData.name %>" 
                         class="w-24 h-24 rounded-full border-4 border-green-500">
                <% } else { %>
                    <div class="w-24 h-24 rounded-full border-4 border-green-500 flex items-center justify-center bg-slate-800">
                        <span class="text-2xl">ðŸ‘¤</span>
                    </div>
                <% } %>
            </div>

            <!-- Profile Information Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <!-- Left Column -->
                <div class="space-y-6">
                    <div>
                        <h2 class="text-lg font-semibold">Name:</h2>
                        <p class="text-gray-300"><%= sampleData.name %></p>
                    </div>

                    <div>
                        <h2 class="text-lg font-semibold">Email:</h2>
                        <p class="text-gray-300"><%= sampleData.email %></p>
                    </div>

                    <div>
                        <h2 class="text-lg font-semibold">Phone:</h2>
                        <p class="text-gray-300"><%= sampleData.phone %></p>
                    </div>

                    <div>
                        <h2 class="text-lg font-semibold">Certifications:</h2>
                        <% if (sampleData.certification && sampleData.certification.length > 0) { %>
                            <ul class="list-disc list-inside text-gray-300">
                                <% sampleData.certification.forEach(cert => { %>
                                    <li><%= cert %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="text-gray-300">No certifications available</p>
                        <% } %>
                    </div>
                </div>

                <!-- Right Column -->
                <div class="space-y-6">
                    <div>
                        <h2 class="text-lg font-semibold">Skills:</h2>
                        <% if (sampleData.skills && sampleData.skills.length > 0) { %>
                            <ul class="list-disc list-inside text-gray-300">
                                <% sampleData.skills.forEach(skill => { %>
                                    <li><%= skill %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="text-gray-300">No skills listed</p>
                        <% } %>
                    </div>

                    <div>
                        <h2 class="text-lg font-semibold">Portfolio:</h2>
                        <% if (sampleData.portfolio && sampleData.portfolio.length > 0) { %>
                            <ul class="list-disc list-inside text-gray-300">
                                <% sampleData.portfolio.forEach(item => { %>
                                    <li><%= item %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="text-gray-300">No portfolio items available</p>
                        <% } %>
                    </div>

                    <div>
                        <h2 class="text-lg font-semibold">Experience:</h2>
                        <% if (sampleData.experience && sampleData.experience.length > 0) { %>
                            <ul class="list-disc list-inside text-gray-300">
                                <% sampleData.experience.forEach(item => { %>
                                    <li><%= item %></li>
                                <% }) %>
                            </ul>
                        <% } else { %>
                            <p class="text-gray-300">No experience listed</p>
                        <% } %>
                        <div class="flex justify-evenly mt-4 w-5/6" >
                        <form method="post" action="?_method=DELETE">
                            <button  class="bg-red-500 text-white py-2 px-6 rounded-lg hover:bg-red-600 transition-colors mb-2">Delete</button> 
                          </form>
                         <a  class="bg-green-500 text-white py-2 px-6 rounded-lg hover:bg-green-600 transition-colors mb-2" href="/freelancer/<%= sampleData._id %>/edit">Edit</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       
    </div>
</body>
</html>