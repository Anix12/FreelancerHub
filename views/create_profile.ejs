<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freelancer Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-4xl mx-auto bg-gray-900 rounded-lg shadow-xl p-8">
            <h1 class="text-3xl font-bold text-green-500 mb-8 text-center">Freelancer Registration</h1>
            
            <form action="/new_freelancer" method="POST" enctype="multipart/form-data" class="space-y-6">
               
                <!-- Name Field -->
                <div >
                    <label for="name" class="block text-white mb-2">Name</label>
                    <input type="text" id="name" name="name" required
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>

                <!-- Email Field -->
                <div>
                    <label for="email" class="block text-white mb-2">Email</label>
                    <input type="email" id="email" name="email" required
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>

                <!-- Phone Field -->
                <div>
                    <label for="phone" class="block text-white mb-2">Phone Number</label>
                    <input type="tel" id="phone" name="phone"
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
                <div>
                    <label for="role" class="block text-white mb-2">Role</label>
                    <input type="text" id="role" name="role" required
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>

                <!-- Skills Field -->
                <div>
                    <label for="skills" class="block text-white mb-2">Skills (Comma separated)</label>
                    <input type="text" id="skills" name="skills"
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500"
                        placeholder="e.g., JavaScript, Python, React">
                </div>
                  
                <div class="flex">
                <!-- Image Upload -->
                <div>
                    <label for="image" class="block text-white mb-2">Profile Image</label>
                    <input type="file" id="image" name="image" accept="image/*"
                        class="w-full text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:bg-green-500 file:text-white hover:file:bg-green-600">
                </div>
                  <!-- rate per hr -->
                  <div>
                    <label for="rate" class="block text-white mb-2">Starting From Hr/rate</label>
                    <input type="number" id="rate" name="rate"
                        class="w-full bg-gray-800 border border-green-500 text-white rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-green-500">
                </div>
            </div>
    
                <!-- Submit Button -->
                <div>
                    <button type="submit"
                        class="w-full bg-green-500 text-white py-3 px-6 rounded-lg hover:bg-green-600 transition duration-300">
                        Register
                    </button>
                </div>
            </form>
        </div>
    </div>

</body>
</html>